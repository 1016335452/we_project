/**index.wxss**/
page {
  height: 100%;
  width: 100%;
}
.container {
  position: relative;
  width: 100%;
  height: 100%;
}
.canvas_area {
  width: 100%;
  height: 80%;
  background-color: #f8f8f8;
}
.myCanvas {
  width: 100%;
  height: 100%;
}
.canvas_tools {
  position: fixed;
  left: 0;
  bottom: 20rpx;
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.box {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: rebeccapurple;
  font: normal 12px/100rpx "微软雅黑";
  text-align: center

}
.box1 {
  background-color: #99cccc;
}
.box2 {
  background-color: #0099cc;
}
.box3 {
  background-color: #cc0033;
}
.box4 {
  background-color: #ff9900;
}
.box5 {
  background-color: #cccccc;
}